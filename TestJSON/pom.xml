  <build>
    <plugins>
      <!-- war package support -->
      <plugin>
        <artifactId>maven-war-plugin</artifactId>
        <version>2.2</version>
        <configuration>
          <failOnMissingWebXml>false</failOnMissingWebXml>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.tomcat.maven</groupId>
        <artifactId>tomcat7-maven-plugin</artifactId>
        <version>2.2</version><configuration><!-- 此为管理员路径，不是部署路径 -->
        <url>http://localhost:8080/manager/text</url>
        <uriEncoding>utf-8</uriEncoding>
        <!-- <update>true</update> <server>tomcat</server> -->
        <!-- 此处为服务器上的用户名和密码，早tomcat-user里设置 -->
        <!-- 格式如 <role rolename="tomcat"/> <role rolename="manager"/>
         <role
              rolename="admin"/>
              <role rolename="manager-gui"/>
              <role rolename="manager-script"/>
              <user username="admin" password="admin" roles="tomcat，manager,admin,manager-gui,manager-script"/> -->
        <server>tomcat7</server>
        <username>admin</username>
        <password>admin</password>
      </configuration></plugin>

      <!-- complier -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.1</version>
        <configuration>
          <source>1.8</source>
          <target>1.8</target>
        </configuration>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-surefire-plugin</artifactId>
        <version>2.10</version>
        <configuration>
          <skip>true</skip>
          <testFailureIgnore>true</testFailureIgnore>
        </configuration>
      </plugin>
    </plugins>

